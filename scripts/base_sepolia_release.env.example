# TrustNet Base Sepolia public rehearsal profile (MVP A0+)
#
# Copy to scripts/base_sepolia_release.env and replace placeholders.
# This profile targets real traffic on official ERC-8004 public contracts.

# Network lock (Base Sepolia)
export TRUSTNET_CHAIN_ID=84532
export TRUSTNET_RPC_URL="https://sepolia.base.org"

# Contract addresses: your deployed TrustNet contracts.
export TRUSTNET_ROOT_REGISTRY="0x0000000000000000000000000000000000000001"
export TRUSTNET_TRUST_GRAPH="0x0000000000000000000000000000000000000002"

# Official ERC-8004 public contracts on Base Sepolia.
export TRUSTNET_ERC8004_IDENTITY="0x8004A818BFB912233c491871b3d84c89A494BD9e"
export TRUSTNET_ERC8004_REPUTATION="0x8004B663056A597Dffe9eCcC1965A193B7388713"

# Optional fixed start block.
# If unset, script uses current block at startup.
# export TRUSTNET_START_BLOCK=29700000
export TRUSTNET_SYNC_CONFIRMATIONS=2

# Keys used for real public transactions.
# All must be funded with Base Sepolia ETH.
export TRUSTNET_PUBLISHER_PRIVATE_KEY="0xYOUR_PUBLISHER_PRIVATE_KEY"
export TRUSTNET_DECIDER_PRIVATE_KEY="0xYOUR_DECIDER_PRIVATE_KEY"
export TRUSTNET_ENDORSER_PRIVATE_KEY="0xYOUR_ENDORSER_PRIVATE_KEY"
export TRUSTNET_TARGET_PRIVATE_KEY="0xYOUR_TARGET_PRIVATE_KEY"

# Optional: reuse pre-existing public agent IDs instead of registering new ones.
# If omitted, script registers endorser/target agents on the official IdentityRegistry.
# export TRUSTNET_ENDORSER_AGENT_ID=123
# export TRUSTNET_TARGET_AGENT_ID=456

# Hosted manifest publication for root anchoring.
export TRUSTNET_MANIFEST_PUBLIC_BASE_URI="https://example.com/trustnet/manifests"

# Optional local overrides.
export TRUSTNET_API_PORT=18088
export TRUSTNET_REHEARSAL_CONTEXT="trustnet:ctx:code-exec:v1"
