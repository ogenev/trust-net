{
  "plugins": {
    // Local path mode. If you used `openclaw plugins install`, remove `load.paths`.
    "load": {
      "paths": ["./plugin-openclaw"]
    },
    "entries": {
      "trustnet-openclaw": {
        "enabled": true,
        "config": {
          "mode": "local-lite", // local-lite|local-verifiable (default local-lite)
          // local-lite: optional
          // local-verifiable: required (compatibility API for /v1/root + /v1/decision)
          "apiBaseUrl": "http://127.0.0.1:8088",
          "decider": "0xDECIDER...",
          "targetPrincipalId": "0xTARGET...", // optional if OpenClaw context already provides agentId
          "toolMapPath": "./plugin-openclaw/tool_map.example.json",
          // local-verifiable only:
          // "rpcUrl": "https://sepolia.infura.io/v3/YOUR_KEY",
          // "rootRegistry": "0xROOTREGISTRY...",
          // "publisherAddress": "0xPUBLISHER...",
          "policyManifestHash": "0x...", // optional, attached to local-verifiable receipt metadata
          "receiptOutDir": "./.trustnet/receipts", // optional (high-risk local receipts only)
          "trustStorePath": "./.trustnet/local-trust.db", // optional, defaults to this path
          "trustCircles": {
            "default": "onlyMe", // onlyMe|myContacts|openclawVerified|custom
            "endorsers": {
              "myContacts": ["0xCONTACT_ENDORSER..."],
              "openclawVerified": ["0xVERIFIED_ENDORSER..."],
              "custom": ["0xCUSTOM_ENDORSER..."]
            }
          },
          "agentCards": {
            // trusted owner ed25519 pubkeys (base64 raw 32-byte keys)
            // cards signed by unknown owners are imported as owner-unknown
            "trustedOwnerPubKeys": ["BASE64_OWNER_PUBKEY..."]
          },
          "trustnetBinary": "trustnet", // optional
          "requestTimeoutMs": 5000,
          "verifyTimeoutMs": 15000,
          "receiptTimeoutMs": 15000,
          "askMode": "block", // block|allow (block returns trustnetAsk ticket for allow_once|allow_ttl|allow_always|block)
          "unmappedDecision": "deny", // deny|ask
          "failOpen": false // recommended false for release
        }
      }
    }
  }
}
