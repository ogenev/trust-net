{
  "plugins": {
    "entries": {
      "trustnet": {
        "enabled": true,
        "mode": "chain", // local|server|chain
        "apiBaseUrl": "http://127.0.0.1:8088",
        "rpcUrl": "https://sepolia.infura.io/v3/YOUR_KEY",
        "rootRegistry": "0xROOTREGISTRY...",
        "publisherAddress": "0xPUBLISHER...",
        "policyManifestHash": "0x…", // optional, included in ActionReceipts
        "toolMapPath": "./tool_map.example.json",
        "policy": {
          "decider": "0xDECIDER…",
          "thresholds": {
            "trustnet:ctx:code-exec:v1": { "allow": 2, "ask": 1 },
            "trustnet:ctx:writes:v1": { "allow": 1, "ask": 0 },
            "trustnet:ctx:messaging:v1": { "allow": 0, "ask": 0 }
          },
          "evidenceRequirements": {
            "trustnet:ctx:code-exec:v1": { "requireEvidenceForPositiveET": true }
          },
          "fallback": {
            "highRisk": "deny",
            "mediumRisk": "ask",
            "lowRisk": "ask"
          }
        }
      }
    }
  }
}
